=hidden_field_tag :action, "channel"
%span.h2.left#channel_name=@channel.name
%br
- unless params[:pc]
  %span.right
    =link_to "Channels", home_path, {class: "reload_index metro_link"}
    =link_to "Next", next_path, {class: "next_unread metro_link"}
%span.clear
%div
  =form_tag(update_path, remote: true) do
    =hidden_field_tag "id", @channel.name
    =text_field_tag "text", nil, style: "width:100%"
    %br
    =submit_tag "Update"
%div#channel_log
  %span#channel_insert_before=''
  = render partial: 'logs', locals: {log: @log}
%div
  %p
    =link_to "Log", log_path(id: @channel.id, date: Date.today.to_s), target: '_blank'
